ARCH=`uname -m`
KERNEL=`uname -r`

export LANG=pl_PL.UTF-8
export LC_ALL=pl_PL.UTF-8
export EDITOR=vim
export KANAPI_VER=0.8
export USER=kanapi
export HOME=/kanapi_packages/home
export XDG_CONFIG_HOME=${HOME}/.config
export XDG_CACHE_HOME=${HOME}/.cache
export XDG_DATA_HOME=${HOME}/.local
export XDG_RUNTIME_DIR=${HOME}/.cache
export LD_LIBRARY_PATH=/kanapi_packages/libs
export PATH=/bin

busybox mount -t ext4 /dev/sda2 /packages

dmesg -n 4

ifconfig lo up

mount -t proc proc /proc
mount -t sysfs sysfs /sys
mkdir /dev/pts
mount -t devpts devpts /dev/pts
mount -t debugfs debugs /sys/kernel/debug

/kanapi_${KANAPI_VER}/${ARCH}/packages/udev-175/libexec/udevd --daemon
udevadm trigger
udevadm settle

gpm -m /dev/input/mice -t exps2

/kanapi_packages/config/network

openvt
openvt
ssh-keygen -A
/bin/sshd
#/bin/localedef -c -i pl_PL -f UTF-8 pl_PL.UTF-8

echo "###########################################################"
echo "#                                                          "
echo "#                                                          "
echo "#    Welcome to KaNaPi ${KANAPI_VER} for x86_64            "
echo "#    Arch: ${ARCH}                                         "
echo "#    Kernel: ${KERNEL}                                     "
echo "###########################################################"

/bin/bash

echo "##################################################"
echo "###       What do you want to do now?          ###"
echo "###                                            ###"
echo "### finish - switch off machine                ###"
echo "### restart - restart machine                  ###"
echo "##################################################"

while true
do
	/bin/bash
done

