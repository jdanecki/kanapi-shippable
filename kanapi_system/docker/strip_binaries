for pkg in /packages/*
do
	for b in ${pkg}/bin/* ${pkg}/usr/bin/* ${pkg}/sbin/* ${pkg}/usr/sbin/*
	do
		if [ -f $b ]
		then 
			file -i ${b} | grep application > /dev/null
			if [ "$?" = "0" ] ; then strip ${b} ; fi
		fi
	done
	for b in ${pkg}/lib/lib* ${pkg}/lib64/lib*
	do
		if [ -f "$b" ]
		then 
			file -i ${b} | grep x-sharedlib > /dev/null 
		   	if [ "$?" = "0" ] ; then strip ${b} ; fi
		fi
	done
done

