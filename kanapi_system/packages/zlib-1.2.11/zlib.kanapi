PACKAGE_NAME=zlib
VER=1.2.11
URL="https://zlib.net"
EXT=tar.xz
SF_URL="libpng/zlib/${VER}/${PACKAGE_NAME}-${VER}.${EXT}"
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	local_copy
	prefix=$PREFIX CC="${KANAPI_C_COMPILER}" AR=${KANAPI_TARGET_NAME}-ar RANLIB=${KANAPI_TARGET_NAME}-ranlib ${PACKAGE_SRCDIR}/configure 
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	if [ -n "${PKG_CONFIG}" ]
	then
		pkg_install_pc
	else
		${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true
	fi
	pkg_install_libs  && pkg_update_include
}

pkg_check() {
	echo "PKG_CONFIG=${PKG_CONFIG}"
}
