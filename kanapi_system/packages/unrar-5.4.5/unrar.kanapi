PACKAGE_NAME=unrar
VER=5.4.5
URL="http://www.rarlab.com/rar"
EXT=tar.gz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_LINK=${URL}/${PACKAGE_NAME}src-${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	PACKAGE_SRCDIR=${KANAPI_BUILD_SRC}/${PACKAGE_NAME}
	local_copy
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} CXX=${KANAPI_CXX_COMPILER}
}

pkg_install() {
	cd build 
	install -D unrar ${PREFIX}/bin/unrar
	pkg_install_bin_all
}

