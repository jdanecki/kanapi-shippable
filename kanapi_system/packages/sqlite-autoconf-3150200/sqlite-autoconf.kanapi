VER=3150200
URL="http://sqlite.org/2016"
EXT=tar.gz
#build depends on

LIB_DEPENDS="ncurses"

. ../settings

export CFLAGS="${CFLAGS} -I${KANAPI_BASE}/readline-${readline_ver}/include"
