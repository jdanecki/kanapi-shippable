PACKAGE_NAME=libxslt
VER=1.1.29
URL="ftp://xmlsoft.org/XSLT"
EXT=tar.gz
#build depends on
LIB_DEPENDS="libxml-2.0 zlib liblzma python-2.7"

. ../settings

export LIBS="-lm ${LIBGCRYPT_LDFLAGS}"
export LDFLAGS="${LDFLAGS} ${LIBGCRYPT_LDFLAGS} -lpthread"

pkg_configure_target() {	
	export LD_LIBRARY_PATH="`${LIBGCRYPT_CONFIG} --prefix`/lib:`${GPG_ERROR_CONFIG} --prefix`/lib:${LD_LIBRARY_PATH}" 
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-crypto \
		ac_cv_path_LIBGCRYPT_CONFIG=${LIBGCRYPT_CONFIG} \
		ac_cv_path_XML_CONFIG="`${PKG_CONFIG} --variable=prefix libxml-2.0`/bin/xml2-config"
}

pkg_install() {
	pkg_install_pc_all && pkg_install_bin_all && pkg_install_libs
}

pkg_check() {
	echo "LIBGCRYPT_LDFLAGS=${LIBGCRYPT_LDFLAGS}"
	echo "LIBGCRYPT_CONFIG=${LIBGCRYPT_CONFIG}"
	echo $PATH
	ls -l ${LIBGCRYPT_CONFIG}
	echo "PKG_CONFIG=${PKG_CONFIG}"
	echo "`${PKG_CONFIG} --variable=prefix libxml-2.0`"
	DIR=`${PKG_CONFIG} --variable=prefix libxml-2.0`
	${DIR}/bin/xml2-config --version
	echo "libgrycpt libdir: `${LIBGCRYPT_CONFIG} --prefix`/lib" 
	echo "libgpg_error libdir: `${GPG_ERROR_CONFIG} --prefix`/lib" 
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
}

