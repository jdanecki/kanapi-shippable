PACKAGE_NAME=libffi
VER=3.2.1
URL="ftp://sourceware.org/pub/libffi"
EXT=tar.gz
#build depends on
. ../settings

pkg_install() {
	pkg_install_pc_all
	if [ -d ${PREFIX}/lib64 ]
	then
		${LN_SF} ${PREFIX}/lib64/* ${PREFIX}/lib
	fi
	pkg_install_libs
}
