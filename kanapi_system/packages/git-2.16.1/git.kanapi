PACKAGE_NAME=git
VER=2.16.1
URL="https://www.kernel.org/pub/software/scm/git"
EXT=tar.xz

LIB_DEPENDS="zlib libcurl openssl libssh2"

. ../settings

export CFLAGS="${CFLAGS} ${GPG_ERROR_CFLAGS} ${LIBGCRYPT_CFLAGS}"
export LDFLAGS="${LDFLAGS} ${GPG_ERROR_LDFLAGS} ${LIBGCRYPT_LDFLAGS}"

pkg_configure() {
	local_copy
	if [ "${KANAPI_CROSS}" = "0" ]
	then
		PERL=${KANAPI_BASE}/perl-${perl_ver}/bin/perl
	else
		PERL=`which perl`
	fi
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} ac_cv_fread_reads_directories=no \
	ac_cv_snprintf_returns_bogus=no --with-curl --without-expat ac_cv_lib_expat_XML_ParserCreate=no \
	--with-perl=${PERL}
}

pkg_build() {
	cd build
	${MAKE} -j 1 MAKEINFO=true V=1
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true
	pkg_install_bin_all
}

pkg_check() {
	echo "CFLAGS=${CFLAGS}"
	${PKG_CONFIG} --cflags ${LIB_DEPENDS}
	ls -l `which perl`
}
