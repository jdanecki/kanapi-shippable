PACKAGE_NAME=gnutls
VER=3.5.7
URL="ftp://ftp.gnutls.org/gcrypt/gnutls/v3.5"
EXT=tar.xz
#build depends on
LIB_DEPENDS="nettle hogweed"

. ../settings

USE_WGET=1

export CFLAGS="${CFLAGS} -I${KANAPI_BASE}/gmp-${gmp_ver}/include"
export LDFLAGS="${LDFLAGS} -L${KANAPI_BASE}/gmp-${gmp_ver}/lib -lgmp"

pkg_configure() {
	local_copy
	./configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
	--with-included-libtasn1  --with-included-unistring  --without-p11-kit
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	pkg_install_pc_all
	pkg_install_bin_all
	pkg_install_libs
}

pkg_check() {
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
}
