PACKAGE_NAME=cmake
VER=3.7.0
URL="https://cmake.org/files/v3.7"
EXT=tar.gz
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_gz
}

pkg_configure() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
			${PACKAGE_SRCDIR}/bootstrap --prefix=$PREFIX --parallel=${MAKE_JOBS} -- \
			-DCURSES_INCLUDE_PATH=`ncurses6-config --includedir` \
			-DCURSES_LIBRARY=`ncurses6-config --libdir`/libncurses.a  -DCURSES_EXTRA_LIBRARY=""
	fi
}

pkg_build() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		if [ "${CI}" = "true" ]
		then
			${MAKE} -j 8 MAKEINFO=true
		else
			${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
		fi
	fi
}

pkg_install() {
	if [ ${KANAPI_CROSS} -eq 0 ]
	then
		pkg_install_make
		pkg_install_bin_all
	fi
}

pkg_check() {
	echo "${PATH}"
	echo "CC=$CC"
	echo "CXX=${CXX}"
	echo "PKG_VERBOSE=${PKG_VERBOSE}"
}

