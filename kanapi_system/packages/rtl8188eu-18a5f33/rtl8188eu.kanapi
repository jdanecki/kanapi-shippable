PACKAGE_NAME=rtl8188eu
VER=18a5f33
URL="https://github.com/lwfinger"
EXT=
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	pkg_git_clone
}

pkg_prepare() {
	echo "nothing to do"
}

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	${MAKE} all
}

pkg_install() {
	cd build
	if [ ! -d ${PREFIX} ] ; then mkdir ${PREFIX}; fi
	install -p -m 644 8188eu.ko  ${PREFIX}
	cp rtl8188eufw.bin ${PREFIX}
}

