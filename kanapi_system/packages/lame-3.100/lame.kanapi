PACKAGE_NAME=lame
VER=3.100
URL="http://downloads.sourceforge.net/${PACKAGE_NAME}"
EXT=tar.gz
#build depends on
LIB_DEPENDS="ncurses"

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --enable-nasm --enable-shared
}

pkg_install() {
	pkg_install_make && pkg_install_bin_all && pkg_install_libs && pkg_update_include
}

