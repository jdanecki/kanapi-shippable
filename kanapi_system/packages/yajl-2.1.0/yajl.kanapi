PACKAGE_NAME=yajl
VER=2.1.0
URL=" http://github.com/lloyd/yajl/tarball/2.1.0"
EXT=tar.gz
#build depends on
. ../settings
#export LD_LIBRARY_PATH=${KANAPI_BASE}/libs

pkg_download() {
	PACKAGE_LINK=${URL}
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		pkg_tar_gz
		ln -svf ${KANAPI_BUILD_SRC}/lloyd-yajl-66cb08c ${KANAPI_BUILD_SRC}/${PACKAGE_VER}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
}

pkg_configure() {
	local_copy
	cmake -G Ninja .  -DCMAKE_INSTALL_PREFIX=${PREFIX} -DCMAKE_C_COMPILER=${KANAPI_TARGET_NAME}-gcc
}

pkg_build() {
	cd build
	ninja
}

pkg_install() {
	cd build
	ninja install
	pkg_install_pc_share_all_only
	pkg_install_bin_all
	pkg_install_libs
}

