PACKAGE_NAME=mesa
VER=17.3.5
URL="ftp://ftp.freedesktop.org/pub/mesa"
EXT=tar.xz
#build depends on
LIB_DEPENDS="xshmfence expat libudev zlib"
. ../settings

#export LLVM_CONFIG=${KANAPI_BASE}/llvm-${llvm_ver}/bin/llvm-config
export LDFLAGS="-lpthread"
#export CFLAGS="-I`${LLVM_CONFIG} --includedir`"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
	--without-gallium-drivers --disable-gallium-llvm --with-dri-drivers="i915,i965,swrast" \
	--with-platforms=x11,drm,wayland --enable-egl --enable-glx --enable-libunwind \
	--enable-gles1 --enable-gles2 --enable-dri  --with-vulkan-drivers=intel --enable-llvm \
	--enable-shared-glapi --enable-va --enable-glx-tls
#	--enable-opencl --enable-opencl-icd --with-gallium-drivers="i915,i965,svga,swrast" 
# 	--disable-llvm-shared-libs
}

pkg_install() {
	pkg_install_pc_all
	pkg_install_libs
}

