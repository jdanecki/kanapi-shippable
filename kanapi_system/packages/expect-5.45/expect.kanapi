PACKAGE_NAME=expect
VER=5.45
URL="SF"
EXT=tar.gz
SF_URL="expect/Expect/${VER}/expect${VER}.${EXT}"
#build depends on
#LIB_DEPENDS=""

. ../settings

export LDFLAGS="${LDFLAGS} -lpthread -lutil"
#export CFLAGS="${CFLAGS} "

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		pkg_tar_gz
		${LN_SF} ${KANAPI_BUILD_SRC}/${PACKAGE_NAME}${VER} ${PACKAGE_SRCDIR}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
}

pkg_configure() {	
	local_copy
	./configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
	--with-tcl=`${PKG_CONFIG} --variable=libdir tcl`
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	pkg_install_make && pkg_install_bin_all
}

