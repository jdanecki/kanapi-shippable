PACKAGE_NAME=attr
VER=2.4.47
URL="http://download.savannah.gnu.org/releases/attr"
EXT=src.tar.gz
#build depends on
. ../settings

pkg_configure() {
	local_copy
	pkg_configure_target
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	pkg_install_make &&	pkg_install_bin_all && ${MAKE} -j ${MAKE_JOBS} MAKEINFO=true install-lib && \
	pkg_install_libs && ${MAKE} -j ${MAKE_JOBS} MAKEINFO=true install-dev && \
	rm -rf ${PREFIX}/share/{man,doc}
}

