PACKAGE_NAME=iotop
VER=0.6
URL="http://guichaz.free.fr/iotop/files"
EXT=tar.bz2
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_configure() {
	local_copy
}

pkg_build() {
	echo "nothing to do"
}

pkg_install() {
	cd build
	python setup.py install --prefix=${PREFIX} --optimize=1
	cat <<EOF > iotop.sh
#!/bin/bash
export PYTHONPATH=${PREFIX}/lib/python2.7/site-packages
${PREFIX}/sbin/iotop
EOF
	chmod +x iotop.sh
	mkdir ${PREFIX}/bin
	cp iotop.sh ${PREFIX}/bin/iotop
	pkg_install_bin_all
}

