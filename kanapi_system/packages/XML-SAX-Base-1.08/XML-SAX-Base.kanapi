PACKAGE_NAME=XML-SAX-Base
VER=1.08
URL="http://search.cpan.org/CPAN/authors/id/G/GR/GRANTM"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {
	local_copy
	perl Makefile.PL PREFIX=${PREFIX}
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	${MAKE} -j 1 install MAKEINFO=true
}

