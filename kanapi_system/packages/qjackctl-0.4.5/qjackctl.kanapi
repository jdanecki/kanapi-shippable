PACKAGE_NAME=qjackctl
VER=0.4.5
URL="http://downloads.sourceforge.net/${PACKAGE_NAME}"
EXT=tar.gz
#build depends on
LIB_DEPENDS="x11"

. ../settings

#export LDFLAGS="${LDFLAGS} "
export CXXFLAGS="-std=c++11 ${CFLAGS}"
export QMAKE=qmake

pkg_configure() {
	local_copy
	./configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME}
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	pkg_install_make && pkg_install_bin_all
}

