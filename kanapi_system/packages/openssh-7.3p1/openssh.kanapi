PACKAGE_NAME=openssh
VER=7.3p1
URL="http://ftp.icm.edu.pl/pub/OpenBSD/OpenSSH/portable"
EXT=tar.gz

LIB_DEPENDS="zlib openssl"

. ../settings

export CFLAGS="${CFLAGS}"
export LDFLAGS="${LDFLAGS} -lpthread"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --without-openssl-header-check --disable-strip \
	--with-privsep-path=${PREFIX}/var/empty
}

pkg_install() {
	${MAKE} install-nokeys MAKEINFO=true && pkg_install_bin_all && pkg_install_sbin_all && \
	rm -rf ${PREFIX}/share/man
}

pkg_check() {
	if [ "${KANAPI_TARGET}" = `uname -m` ] 
	then
		echo "LD_LIBRARY_PATH=${LD_LIBRARY_PATH}"
	fi

	echo "CFLAGS=${CFLAGS}"
	echo "LDFLAGS=${LDFLAGS}"
}
