PACKAGE_NAME=imake
VER=1.0.7
URL="https://www.x.org/releases/individual/util"
EXT=tar.bz2
#build depends on
. ../settings

pkg_configure() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-config-dir=${KANAPI_BASE}/xorg-cf-files-${xorg_cf_files_ver}/lib/X11/config
}

pkg_install() {
	pkg_install_make
	pkg_install_bin_all
}

