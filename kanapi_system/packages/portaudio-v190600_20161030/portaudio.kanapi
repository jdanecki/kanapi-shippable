PACKAGE_NAME=portaudio
VER=v190600_20161030
URL="http://www.portaudio.com/archives"
EXT=tgz
#build depends on
#LIB_DEPENDS=""

. ../settings

export LDFLAGS="${LDFLAGS} -ldl -lm -lpthread -lrt -lstdc++"
#export CFLAGS="${CFLAGS} "

export MAKE_JOBS=1

pkg_download() {
	PACKAGE_FILENAME=${PACKAGE_NAME}-${VER}.${EXT}
	PACKAGE_LINK=${URL}/pa_stable_${VER}.${EXT}
	
	pkg_curl
}

pkg_configure_target() {
	if [ ! -d ${PACKAGE_SRCDIR} ]
	then
		if [ -d ${KANAPI_BUILD_SRC}/portaudio ]
		then
			mv ${KANAPI_BUILD_SRC}/portaudio ${PACKAGE_SRCDIR}
		fi
	fi
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-alsa --with-jack  --enable-cxx 
}
	
pkg_install() {
	pkg_install_pc_all && pkg_install_libs
}

