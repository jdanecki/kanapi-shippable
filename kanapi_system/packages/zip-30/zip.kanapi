PACKAGE_NAME=zip
VER=30
URL="ftp://ftp.info-zip.org/pub/infozip/src"
EXT=tgz
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_LINK=${URL}/${PACKAGE_NAME}${VER}.${EXT}
	pkg_curl
}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		pkg_tgz
		${LN_SF} ${KANAPI_BUILD_SRC}/zip${VER} ${PACKAGE_SRCDIR}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
}

pkg_configure() {
	local_copy
	sh ./unix/configure gcc
	ln -s unix/Makefile Makefile
}

pkg_build() {
	cd build
	${MAKE} generic_gcc
}

pkg_install() {
	cd build
	${MAKE} prefix=${PREFIX} install
	pkg_install_bin_all
}

