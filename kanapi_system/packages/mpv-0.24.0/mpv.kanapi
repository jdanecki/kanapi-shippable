PACKAGE_NAME=mpv
VER=0.24.0
URL="https://github.com/mpv-player/mpv/archive"
EXT=tar.gz
#build depends on
LIB_DEPENDS="zlib"

. ../settings

export LDFLAGS="${LDFLAGS} -lm -lpthread"
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_LINK=${URL}/v${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	local_copy
	./bootstrap.py
	./waf configure --prefix=${PREFIX} \
	--confdir=${PREFIX}/etc/mpv  --enable-encoding  --enable-libmpv-shared \
	--enable-zsh-comp --disable-libass
}

pkg_build() {
	cd build
	./waf build
}

pkg_install() {
	cd build
	./waf install && pkg_install_bin_all && pkg_install_libs && pkg_install_pc_all_only
}

