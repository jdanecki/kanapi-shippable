PACKAGE_NAME=ninja
VER=1.8.2
URL="https://github.com/ninja-build/ninja/archive"
EXT=tar.gz
#build depends on
. ../settings

export AR=${KANAPI_TARGET_NAME}-ar
export CXX=${KANAPI_CXX_COMPILER}

pkg_download() {
	PACKAGE_LINK=${URL}/v${VER}.${EXT}
	pkg_curl
}

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	if [ "${KANAPI_CROSS}" = "1" ]
	then
		sed -i "s@print('bootstrap complete.  rebuilding...')@exit()@" configure.py
	fi

	./configure.py --platform linux --host linux --bootstrap --verbose
}

pkg_install() {
	mkdir -p ${PREFIX}/bin 
	cp build/ninja ${PREFIX}/bin &&	ln -svf ${PREFIX}/bin/ninja ${KANAPI_BASE}/../bin/ninja

}

