PACKAGE_NAME=zlib
VER=1.2.8
URL="SF"
EXT=tar.gz
SF_URL="libpng/zlib/${VER}/${PACKAGE_NAME}-${VER}.${EXT}"
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_gz
}

pkg_configure() {
	local_copy
	prefix=$PREFIX CC="${KANAPI_C_COMPILER}" AR=${KANAPI_TARGET_NAME}-ar RANLIB=${KANAPI_TARGET_NAME}-ranlib ${PACKAGE_SRCDIR}/configure 
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true
	pkg_install_libs
}

