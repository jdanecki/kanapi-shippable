PACKAGE_NAME=i3status
VER=2.10
URL="https://i3wm.org/i3status"
EXT=tar.bz2
#build depends on
. ../settings

pkg_prepare() {
	pkg_tar_bz2
}

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS}
}

pkg_install() {
	cd build
	pkg_install_make
	pkg_install_bin_all
}

