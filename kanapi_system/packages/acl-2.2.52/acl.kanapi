PACKAGE_NAME=acl
VER=2.2.52
URL="http://download.savannah.gnu.org/releases/acl"
EXT=src.tar.gz
#build depends on
. ../settings

export CFLAGS="-I${KANAPI_BASE}/attr-${attr_ver}/include"
export LDFLAGS="-L${KANAPI_BASE}/attr-${attr_ver}/lib"

pkg_configure() {
	local_copy
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} 
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build && pkg_install_make && pkg_install_bin_all && ${MAKE} -j ${MAKE_JOBS} MAKEINFO=true install-lib &&	\
	pkg_install_libs &&	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true install-dev && \
	rm -rf ${PREFIX}/share/{man,doc}
}

