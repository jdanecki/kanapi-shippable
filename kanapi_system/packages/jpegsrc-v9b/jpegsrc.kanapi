PACKAGE_NAME=jpegsrc
VER=v9b
URL="http://www.ijg.org/files"
EXT=tar.gz
#build depends on
. ../settings

pkg_download() {
	PACKAGE_FILENAME=${PACKAGE_NAME}.${VER}.${EXT}
	PACKAGE_LINK=${URL}/${PACKAGE_FILENAME}
	pkg_curl

}

pkg_prepare() {
	if [ -f ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared ] 
	then 
		echo "$PACKAGE_NAME: already prepared"
	else
		PACKAGE_FILENAME=${PACKAGE_NAME}.${VER}.${EXT}
		tar -xzf ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME} -C ${KANAPI_BUILD_SRC}
		${LN_SF} ${KANAPI_BUILD_SRC}/jpeg-9b ${PACKAGE_SRCDIR}
		/bin/date > ${KANAPI_BUILD_SRC}/${PACKAGE_FILENAME}.prepared
	fi
}

pkg_install() {
	pkg_install_make
	pkg_install_libs
	pkg_install_bin_all
}

