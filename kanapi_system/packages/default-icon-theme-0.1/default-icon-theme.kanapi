PACKAGE_NAME=default-icon-theme
VER=0.1
URL="https://icon-theme.freedesktop.org/releases"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {	
	local_copy
}

pkg_build() {
	echo "nothing to do"
}

pkg_install() {
	cd build
	${MAKE} DESTDIR=${PREFIX} install
	if [ ! -d ${KANAPI_HOME}/.icons ] ; then mkdir ${KANAPI_HOME}/.icons ; fi
   ${LN_SF} ${PREFIX}/usr/local/icons/default ${KANAPI_HOME}/.icons/default   
}

