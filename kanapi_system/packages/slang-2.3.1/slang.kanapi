PACKAGE_NAME=slang
VER=2.3.1
URL="http://www.jedsoft.org/releases/slang"
EXT=tar.bz2
LIB_DEPENDS=zlib

. ../settings

pkg_configure() {
	local_copy
	./configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --without-pcre --without-png --with-z=`${PKG_CONFIG} --variable=prefix zlib`
}

pkg_build() {
	cd build
	${MAKE}  MAKEINFO=true
}

pkg_install() {
	cd build
	export MAKE_JOBS=1
	pkg_install_pc
	pkg_install_libs
	pkg_install_bin_all
}

pkg_check() {
	echo "PKG_CONFIG=${PKG_CONFIG}"
}
