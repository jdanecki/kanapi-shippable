PACKAGE_NAME=pulseaudio
VER=11.1
URL="https://freedesktop.org/software/pulseaudio/releases"
EXT=tar.xz
#build depends on
LIB_DEPENDS="xcb"

. ../settings

export LDFLAGS="${LDFLAGS} -L${KANAPI_BASE}/libtool-${libtool_ver}/lib -lresolv -lrt -lpthread"
export CFLAGS="${CFLAGS} -I ${KANAPI_BASE}/libtool-${libtool_ver}/include"
export CPP="${KANAPI_TARGET_NAME}-gcc -E ${CFLAGS}"

export PERL5LIB="${KANAPI_BASE}/XML-Parser-${XML_Parser_ver}/lib/site_perl/${perl_ver}"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --without-caps
}

pkg_install() {
	pkg_install_pc_all && pkg_install_bin_all && pkg_install_libs
	for f in ${PREFIX}/lib/pulseaudio/lib*.so*
	do
		if [ -f $f ] 
		then
			${LN_SF} $f ${KANAPI_BASE}/libs/`basename $f`
		fi
	done

}

