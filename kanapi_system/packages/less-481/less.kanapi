PACKAGE_NAME=less
VER=481
URL="http://www.greenwoodsoftware.com/less"
EXT=tar.gz
#build depends on

LIB_DEPENDS="ncurses"

. ../settings

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
	--with-regex=none
}

pkg_install() {
	pkg_install_make && pkg_install_bin_all && rm -rf ${PREFIX}/share/man
}

