PACKAGE_NAME=clinfo
VER=master
URL="https://github.com/Oblomov"
EXT=
#build depends on
#LIB_DEPENDS=""

. ../settings

export LDFLAGS="-L${KANAPI_BASE}/ocl-icd-${ocl_icd_ver}/lib"
export CFLAGS="-I${KANAPI_BASE}/beignet-${beignet_ver}/include"

pkg_download() {
	pkg_git_clone
}

pkg_prepare() {
	echo "nothing to do"
}

pkg_configure() {
	local_clone
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS}
}

pkg_install() {
	mkdir -p ${PREFIX}/bin
	cp -v build/clinfo ${PREFIX}/bin
	pkg_install_bin_all
}

