PACKAGE_NAME=bzip2
VER=1.0.6
URL="http://www.bzip.org/1.0.6"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	if [ "${KANAPI_TARGET}" = "x86_64" ]
	then
		CC="${KANAPI_C_COMPILER} -fPIC"
	else
		CC="${KANAPI_C_COMPILER}"
	fi

	${MAKE} -j ${MAKE_JOBS} CC="${CC}"
	${MAKE} -j ${MAKE_JOBS} -f Makefile-libbz2_so CC="${CC}"
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true PREFIX=${PREFIX}
	cp -a libbz2.so.* ${PREFIX}/lib
	pkg_install_bin_all
	pkg_install_libs
}

