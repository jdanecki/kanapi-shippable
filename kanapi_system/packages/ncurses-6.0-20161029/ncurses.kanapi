PACKAGE_NAME=ncurses
VER=6.0-20161029
URL="ftp://invisible-island.net/ncurses/current"
EXT=tgz
#build depends on
. ../settings

pkg_configure() {
	 if [ "${KANAPI_TARGET}" = "x86_64" ]
	 then
		 export CFLAGS="${CFLAGS} -fPIC"
	 	 export LDFLAGS="${LDFLAGS} -fPIC"
	 fi
	if [ ! -d ${PKG_CONFIG} ] ; then  mkdir -p ${PREFIX}/lib/pkgconfig ; fi
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME}  --enable-pc-files=yes --with-pkg-config-libdir=${PREFIX}/lib/pkgconfig \
  	--enable-termcap --with-termpath=${PREFIX}/etc/termcap
}

pkg_install() {
	${MAKE} -j 1 install
	pkg_install_bin_all
	pkg_install_pc_all_only
	pkg_install_libs
}

pkg_check() {
	${MAKE} -n install
}
