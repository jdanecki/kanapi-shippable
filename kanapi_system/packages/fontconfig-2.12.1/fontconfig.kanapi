PACKAGE_NAME=fontconfig
VER=2.12.1
URL="http://www.freedesktop.org/software/fontconfig/release"
EXT=tar.bz2
#build depends on
LIB_DEPENDS="libpng zlib"

. ../settings

export LIBS="-lm"

pkg_configure_target() {	
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} --with-default-fonts=${PREFIX}/share/fonts
}

pkg_install() {
	mkdir -p ${PREFIX}/share/fonts
	pkg_install_pc_all
	pkg_install_bin_all
	pkg_install_libs

# run on target
#fc-cache -s -f -v
}



