PACKAGE_NAME=vym
VER=2.6.11
EXT=tar.bz2
URL="SF"
SF_URL="vym/2.6.0/vym-${VER}.${EXT}"
#build depends on
LIB_DEPENDS="gl"

. ../settings

export CXX="${KANAPI_CXX_COMPILER} ${CFLAGS}"

pkg_configure() {
	local_copy
	qmake PREFIX=${PREFIX}
}

pkg_build() {
	cd build
	${MAKE} -j ${MAKE_JOBS} MAKEINFO=true CXX="${CXX}"

}

pkg_install() {
	cd build
	pkg_install_make
	pkg_install_bin_all
}

pkg_check() {
	${PKG_CONFIG} --libs ${LIB_DEPENDS}
}

