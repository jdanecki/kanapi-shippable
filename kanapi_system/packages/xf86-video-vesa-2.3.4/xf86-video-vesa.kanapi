PACKAGE_NAME=xf86-video-vesa
VER=2.3.4
URL="http://www.x.org/releases/individual/driver"
EXT=tar.bz2
#build depends on
. ../settings

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} 
}

pkg_install() {
	pkg_install_make
	ln -svf ${PREFIX}/lib/xorg/modules/drivers/* ${KANAPI_BASE}/xorg-server-${xorg_server_ver}/lib/xorg/modules/drivers
}	

