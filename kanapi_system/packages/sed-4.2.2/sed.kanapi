PACKAGE_NAME=sed
VER=4.2.2
URL="GNU"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
	--without-selinux --disable-nls
}

pkg_install() {
	pkg_install_make &&	pkg_install_bin && \
	rm -rf ${PREFIX}/share/{man,info}
}

