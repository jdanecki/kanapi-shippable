PACKAGE_NAME=freeimage
VER=3.17.0
URL="https://kent.dl.sourceforge.net/project/${PACKAGE_NAME}/Source%20Distribution/${VER}"
EXT=zip
#build depends on
#LIB_DEPENDS=""

. ../settings

#export LDFLAGS="${LDFLAGS} "
#export CFLAGS="${CFLAGS} "

pkg_download() {
	PACKAGE_FILENAME=${PACKAGE_NAME}-${VER}.${EXT}
	PACKAGE_LINK=${URL}/FreeImage3170.zip
	pkg_curl
}

pkg_configure() {
	PACKAGE_SRCDIR=${KANAPI_BUILD_SRC}/FreeImage
	local_copy
}

pkg_build() {
	pkg_build_local
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} install MAKEINFO=true DESTDIR=${PREFIX}
	pkg_install_libs
}

