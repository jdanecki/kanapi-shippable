VER=1_3_0
URL="http://caoua.org/git"
EXT=
#build depends on
#LIB_DEPENDS=""

. ../settings

export LDFLAGS="${LDFLAGS} -ldl -lm -lrt -lpthread"
#export CFLAGS="${CFLAGS} "

pkg_download() {
	pkg_git_clone
}

pkg_configure() {
	VER=release_${VER}
   	local_clone
