PACKAGE_NAME=libssh2
VER=1.8.0
URL="https://www.libssh2.org/download"
EXT=tar.gz
LIB_DEPENDS=zlib

. ../settings

export CFLAGS="${CFLAGS} ${GPG_ERROR_CFLAGS}"
export LDFLAGS="${LDFLAGS} ${GPG_ERROR_LDFLAGS}"

pkg_configure() {
	${PACKAGE_SRCDIR}/configure --prefix=$PREFIX --host=${KANAPI_TARGET_NAME} \
		--with-libgcrypt=`${LIBGCRYPT_CONFIG} --prefix` \
		--without-openssl \
		--with-libz-prefix=`${PKG_CONFIG} --variable=prefix zlib`
}

pkg_check() {
	echo "gpg-error-config --cflags = ${GPG_ERROR_CFLAGS}"
	echo "gpg-error-config --libs = ${GPG_ERROR_LDFLAGS}"
	echo "libgcrypt-config --cflags = ${LIBGCRYPT_CFLAGS}"
	echo "libgcrypt-config --libs = ${LIBGCRYPT_LDFLAGS}"
	echo "libgcrypt-config --prefix `${LIBGCRYPT_CONFIG} --prefix`"
	echo "pkg-config --variable=prefix zlib = `${PKG_CONFIG} --variable=prefix zlib`"
	echo "CFLAGS=${CFLAGS}"
	echo "LDFLAGS=${LDFLAGS}"
	echo "LD_LIBRARY_PATH=${LD_LIBRARY_PATH}"
}

pkg_install() {
	pkg_install_pc
	pkg_install_libs
}
