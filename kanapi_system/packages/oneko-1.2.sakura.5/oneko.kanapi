PACKAGE_NAME=oneko
VER=1.2.sakura.5
URL="http://www.daidouji.com/oneko/distfiles"
EXT=tar.gz
#build depends on
. ../settings

pkg_configure() {
	local_copy
	imake -I${KANAPI_BASE}/xorg-cf-files-${xorg_cf_files_ver}/lib/X11/config \
		-DBinDir=${PREFIX}/bin
#	xmkmf
}

pkg_build() {
	cd build
	${MAKE} INCLUDES="`pkg-config --cflags x11 xext`" \
		LOCAL_LDFLAGS="`pkg-config --libs x11 xext xcb xau` -ldl" 
}

pkg_install() {
	cd build
	pkg_install_make
	pkg_install_bin_all
}

pkg_check() {
	gcc --version
	g++ --version
	cc --version
}


