PACKAGE_NAME=pciutils
VER=3.5.2
URL="ftp://atrey.karlin.mff.cuni.cz/pub/linux/pci"
EXT=tar.gz
#build depends on

LIB_DEPENDS="zlib libkmod liblzma"

. ../settings

export LDFLAGS="${LDFLAGS} -lpthread -lresolv"

pkg_configure() {
	local_copy
}

pkg_build() {
	cd build
	${MAKE} PREFIX=${PREFIX} SHARED=yes ZLIB=yes CROSS_COMPILE=${KANAPI_TARGET_NAME}- CFLAGS="${CFLAGS}"
}

pkg_install() {
	cd build
	${MAKE} -j ${MAKE_JOBS} PREFIX=${PREFIX} SHARED=yes install 
	${MAKE} -j ${MAKE_JOBS} PREFIX=${PREFIX} SHARED=yes install-lib
	pkg_install_sbin_all
	pkg_install_libs
	pkg_install_pc_all_only
}

pkg_check() {
	${PKG_CONFIG} --cflags ${LIB_DEPENDS}
}

