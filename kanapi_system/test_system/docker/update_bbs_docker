#!/bin/bash

DIR=`pwd`
if [ ! -d ${HOME}/src ] ; then mkdir ${HOME}/src ; fi
if [ ! -d kanapi ] 
then 
	git clone https://github.com/jdanecki/kanapi.git kanapi 
else
	pushd kanapi
	git pull
	popd
fi

ID=`docker create -i -t -v ${DIR}/kanapi:/kanapi_build/kanapi -v ${HOME}/src:/kanapi_0.9/x86_64/home/src -e HOME=/kanapi_0.9/x86_64/home kanapi/kanapi-bbs:latest`
docker rename ${ID} kanapi-bbs

for f in resolv.conf 
do
	docker cp /etc/$f ${ID}:/etc/$f
done
docker cp kanapi/kanapi_system/test_system/docker/configure ${ID}:/configure
